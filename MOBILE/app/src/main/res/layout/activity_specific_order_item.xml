<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"

    android:background="@drawable/background1"
    tools:context=".SpecificOrderItem">
  <LinearLayout

      android:id="@+id/order_specific_item"
      android:layout_width="match_parent"
      android:layout_height="120dp"
      android:layout_margin="10dp"
      android:orientation="horizontal">
      <TextView
          android:id="@+id/Order_name_spec"
          android:layout_marginLeft="150dp"
          android:layout_marginTop="10dp"
          android:layout_width="150dp"
          android:layout_height="30dp"
          android:textSize="20dp"
          android:textStyle="bold"
          android:textColor="@color/black"
          android:text="Order Name"/>

      <TextView
          android:id="@+id/supplier_name_spec"
          android:layout_marginTop="40dp"
          android:layout_width="130dp"
          android:layout_height="30dp"
          android:textSize="20dp"
          android:layout_marginLeft="-280dp"
          android:text="Not confirned"/>

      <TextView
          android:id="@+id/Order_Confirm_spec"
          android:layout_marginTop="70dp"
          android:layout_width="130dp"
          android:layout_height="30dp"
          android:textSize="20dp"
          android:layout_marginLeft="-130dp"
          android:text="Not confirmed"/>

      <TextView
          android:id="@+id/Order_delivery_spec"
          android:layout_marginTop="40dp"
          android:layout_width="130dp"
          android:layout_height="30dp"
          android:textSize="20dp"
          android:layout_marginLeft="80dp"
          android:text="Not Delivered"/>

      <ImageView
          android:id="@+id/Order_status_spec"
          android:layout_marginTop="10dp"
          android:layout_width="20dp"
          android:layout_height="20dp"
          android:background="@drawable/red"
          android:textSize="20dp"
          android:layout_marginLeft="-40dp"/>

      <TextView
          android:id="@+id/Order_Total_spec"
          android:layout_marginTop="70dp"
          android:layout_width="120dp"
          android:layout_height="30dp"
          android:textSize="20dp"
          android:textColor="@color/red"
          android:layout_marginLeft="-110dp"
          android:text="Rs:1500.00"/>

  </LinearLayout>
    <Button

        android:id="@+id/btn_inquiry"
        android:layout_width="350dp"
        android:layout_height="70dp"
        android:layout_marginLeft="20dp"
        android:layout_marginTop="100sp"
        android:text="Make Inquiry"/>
    <Button
        android:id="@+id/btn_view_order_items"
        android:layout_width="350dp"
        android:layout_height="70dp"
        android:layout_marginLeft="20dp"
        android:text="View Items"/>

</LinearLayout>