<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/background1"
    tools:context=".ViewItem">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_margin="10dp">

        <androidx.cardview.widget.CardView
            android:id="@+id/card2"
            android:layout_width="match_parent"
            app:cardCornerRadius="10dp"
            android:layout_height="match_parent">
            <ImageView
                android:id="@+id/item_view_Image"
                android:layout_width="match_parent"
                android:layout_height="300dp"
                android:scaleType="fitXY"
                android:layout_marginStart="8dp"
                android:layout_marginLeft="8dp"
                android:layout_marginTop="8dp"
                android:layout_marginEnd="8dp"
                android:layout_marginRight="8dp"
                android:layout_marginBottom="8dp"
                android:adjustViewBounds="false"
                android:elevation="5dp"
                android:layout_below="@+id/logo"
                android:translationZ="5dp"
                android:contextClickable="true"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent" />
        </androidx.cardview.widget.CardView>
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/card2"
            android:orientation="vertical">
            <LinearLayout
                android:id="@+id/layer2"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:layout_below="@+id/item_view_subcategory"
                android:orientation="horizontal">
                <TextView
                    android:id="@+id/item_view_name"
                    android:layout_width="match_parent"
                    android:layout_height="30dp"
                    android:text="@string/ItemName"
                    android:textSize="27dp"
                    android:textColor="@color/black"
                    android:textStyle="bold"/>
            </LinearLayout>

            <LinearLayout
                android:id="@+id/ViewLayer3"
                android:layout_width="match_parent"
                android:layout_height="30dp"
                android:layout_below="@id/layer2"
                android:orientation="horizontal">

                <ImageView
                    android:id="@+id/Image_policy"
                    android:layout_marginTop="4dp"
                    android:layout_width="20dp"
                    android:layout_height="18dp"
                    android:src="@drawable/next"/>
                <TextView
                    android:id="@+id/Item_policy_view"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="item policy"
                    android:textColor="@color/black"
                    android:layout_marginLeft="10dp"
                    android:textSize="15dp" />
            </LinearLayout>
            <LinearLayout
                android:id="@+id/layer5"
                android:layout_width="match_parent"
                android:layout_height="30dp"
                android:layout_below="@id/layer4"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/supplierCompany"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Supplier Company:"
                    android:textSize="15dp"

                    android:textColor="@color/black"/>
                <TextView
                    android:id="@+id/Supplier_company_view"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Supplier Company"
                    android:layout_marginLeft="10dp"
                    android:textSize="15dp"/>
            </LinearLayout>
            <LinearLayout
                android:id="@+id/layer4"
                android:layout_width="match_parent"
                android:layout_height="30dp"
                android:layout_below="@id/ViewLayer3"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/Suppliername"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Supplier Name:"
                    android:textSize="15dp"
                    android:textColor="@color/black"/>
                <TextView
                    android:id="@+id/Supplier_name_view"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Supplier name"
                    android:textColor="@color/black"
                    android:layout_marginLeft="10dp"
                    android:textSize="15dp" />

            </LinearLayout>
            <LinearLayout
                android:id="@+id/layer6"
                android:layout_width="match_parent"
                android:layout_height="30dp"
                android:layout_below="@id/ViewLayer3"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/SupplierSpeciality"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Supplier Speciality:"
                    android:textSize="15dp"
                    android:textColor="@color/black"/>
                <TextView
                    android:id="@+id/Supplier_Speciality_view"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Supplier Speciality"
                    android:textColor="@color/black"
                    android:layout_marginLeft="10dp"
                    android:textSize="15dp" />

            </LinearLayout>
            <LinearLayout
                android:id="@+id/layer7"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:layout_marginBottom="15dp"
                android:layout_marginLeft="160dp"
                android:layout_below="@+id/layer6"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/product_buy_Rs"
                    android:layout_width="wrap_content"
                    android:layout_height="40dp"
                    android:text="Rs :"
                    android:textColor="@color/gray"
                    android:textSize="35dp"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/item_price_view"
                    android:layout_width="165dp"
                    android:layout_height="40dp"
                    android:text="10,100.00"
                    android:textColor="@color/red"
                    android:textSize="35dp"
                    android:textStyle="bold" />
            </LinearLayout>
            <LinearLayout
                android:id="@+id/layer8"
                android:layout_marginTop="5dp"
                android:layout_below="@+id/layer7"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <LinearLayout
                    android:id="@+id/layer9"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/layer7"
                    android:layout_gravity="center_horizontal"
                    android:layout_marginTop="5dp"
                    android:orientation="vertical">

                    <ImageView
                        android:id="@+id/addItem"
                        android:layout_width="40dp"
                        android:layout_height="40dp"
                        android:layout_marginRight="7dp"
                        android:src="@drawable/ic_baseline_add_circle_24" />

                    <TextView
                        android:id="@+id/qty"
                        android:layout_width="40dp"
                        android:layout_height="40dp"
                        android:layout_marginLeft="48dp"
                        android:layout_marginTop="-40dp"
                        android:text="1"
                        android:textSize="30dp"
                        android:textStyle="bold" />


                    <ImageView
                        android:id="@+id/removeItem"
                        android:layout_width="40dp"
                        android:layout_height="40dp"
                        android:layout_marginLeft="75dp"
                        android:layout_marginTop="-40dp"
                        android:src="@drawable/ic_baseline_indeterminate_check_box_24" />


                </LinearLayout>

                <Button
                    android:id="@+id/product_buy_button_user"
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:layout_below="@+id/product_view_price"
                    android:background="@drawable/add_to_cart"
                    android:text="Add to cart"
                    android:textColor="@color/white"
                    android:textSize="21dp"
                    android:textStyle="bold" />
            </LinearLayout>
        </LinearLayout>
    </RelativeLayout>
</ScrollView>